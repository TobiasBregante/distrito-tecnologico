<%- include('./../components/header') %>
<section class="row login">
    <artyicle class="col-12 col-sm-12 col-lg-4 col-xl-4 bg-dark text-light">
        <h2>5 tips para encontrar la casa ideal</h2>
    </artyicle>
    <article class="col-12 col-sm-12 col-lg-8 col-xl-8 bg-warning">
        <form method="POST" action="/verify-register">
            <article class="form-row">
            <article class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input name="email" type="email" class="form-control" id="inputEmail4">
            </article>
            <article class="form-group col-md-6">
                <label for="inputPassword4">Contraseña</label>
                <input name="pdw" type="password" class="form-control" id="inputPassword4">
            </article>
            </article>
            <article class="form-group">
            <label for="inputAddress">Calle</label>
            <input name="address" type="text" class="form-control" id="inputAddress" placeholder="Av. Rivadavia 4223">
            </article>
            <article class="form-group">
            <label for="inputAddress2">Calle 2</label>
            <input name="address_2" type="text" class="form-control" id="inputAddress2" placeholder="Departamento, Estudio, o Calle">
            </article>
            <article class="form-row">
            <article class="form-group col-md-6">
                <label for="inputCity">Ciudad</label>
                <input name="city" type="text" class="form-control" id="inputCity">
            </article>
            <article class="form-group col-md-4">
                <label for="inputState">País/Estado</label>
                <select name="state" id="inputState" class="form-control">
                <option selected>Elegir...</option>
                <%- StateList%>
                </select>
            </article>
            <article class="form-group col-md-2">
                <label for="inputZip">Código postal</label>
                <input name="zip" type="text" class="form-control" id="inputZip">
            </article>
            </article>
            <article class="form-group">
            <article class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                Check me out
                </label>
            </article>
            </article>
            <button type="submit" class="btn btn-primary">Sign in</button>
            <a href="/login" class="btn btn-outline-info">or login</a>
        </form>
    </article>
</section>
<%- include('./../components/footer') %>